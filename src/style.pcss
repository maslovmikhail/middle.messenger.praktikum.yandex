:root {
  --main-color: #3369f3;
  --second-color: #e4edfd;
  --error-color: #ff2f2f;
  --text-color: #1e1e1e;
  --text-secondary-color: #999;
  --button-text-color: #fff;
}

* {
  box-sizing: border-box;
  margin: 0;
}

body {
  font-family: "Inter", sans-serif;
  margin: 0 auto;
}

.main {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
